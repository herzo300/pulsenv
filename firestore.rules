rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Жалобы — чтение всем, запись через сервер
    match /complaints/{complaintId} {
      allow read: if true;
      // Разрешаем создание (для REST API мониторинга)
      // Обновление/удаление — только через Admin SDK
      allow create: if true;
      allow update, delete: if false;
    }
    
    // Статистика — только чтение
    match /stats/{statId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Пользователи
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
